<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_4dp_radius_shape"
    android:orientation="vertical">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/tap"
        android:tint="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="تغییر درصد پروژه"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="با کشیدن انگشت خود ، درصد پیشرفت پروژه را تغییر دهید"
        android:textColor="#707070" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:isb_indicator_color="@color/colorPrimary"
        app:isb_indicator_text_color="#fff"
        app:isb_max="100"
        app:isb_min="0"
        app:isb_progress="50"
        app:isb_seek_smoothly="true"
        app:isb_show_tick_marks_type="oval"
        app:isb_thumb_adjust_auto="false"
        app:isb_thumb_color="@color/colorPrimary"
        app:isb_thumb_size="16dp"
        app:isb_thumb_text_color="#fff"
        app:isb_tick_marks_color="@color/colorPrimary"
        app:isb_tick_marks_size="16dp"
        app:isb_tick_texts_color="#fff"
        app:isb_ticks_count="1"
        app:isb_track_background_color="#fff"
        app:isb_track_background_size="16dp"
        app:isb_track_progress_color="@color/colorPrimary"
        app:isb_track_progress_size="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp">

        <TextView
            android:id="@+id/txt_current_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="100%" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="درصد پیشرفت : " />
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="تایید"
        android:textColor="#fff" />
</LinearLayout>