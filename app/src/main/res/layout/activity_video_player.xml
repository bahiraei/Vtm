<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.halilibo.bvpkotlin.BetterVideoPlayer
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bvp_autoPlay="true"
        app:bvp_pauseDrawable="@drawable/icons8_pause_208px_2"
        app:bvp_playDrawable="@drawable/icons8_play_208px_1" />


    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/video_size_gradient"
        android:rotation="180"
        app:layout_constraintTop_toTopOf="@+id/player" />


    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:tint="#fff"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_backspace_black_24dp"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/btn_download"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:tint="#fff"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_download_from_cloud_512px"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>